<pretty-config xmlns="http://ocpsoft.org/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/prettyfaces/3.3.3 http://ocpsoft.org/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <!-- anonymous mappings -->
    <url-mapping id="home">
        <pattern value="/pages/home" />
        <view-id value="/pages/home.xhtml" />
    </url-mapping>

    <!-- errors -->
    <url-mapping id="error-404">
        <pattern value="/pages/error/404" />
        <view-id value="/pages/error/404.xhtml" />
    </url-mapping>
    <url-mapping id="error-503">
        <pattern value="/pages/error/404" />
        <view-id value="/pages/error/503.xhtml" />
    </url-mapping>

</pretty-config>